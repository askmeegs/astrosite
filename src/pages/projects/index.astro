---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects.js';
---

<Layout title="My Projects | Wholesome Dev Portfolio">
  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-lg mb-8 transform hover:scale-105 transition-transform">
        <h1 class="text-4xl font-comic font-bold mb-4 dark:text-white">Much Projects, So Wow üöÄ</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 font-comic">
          Check out what I've been building with love, coffee, and occasional tears
        </p>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <a href={`/projects/${project.id}`} class="block group">
            <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md transform group-hover:scale-105 transition-transform h-full flex flex-col">
              <div class="h-48 bg-gray-200 dark:bg-gray-700 relative overflow-hidden">
                <img 
                  src={project.image} 
                  alt={project.title} 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute top-4 left-4 bg-white dark:bg-gray-800 h-12 w-12 rounded-lg flex items-center justify-center text-2xl shadow-md">
                  {project.emoji}
                </div>
                <div class="absolute bottom-0 right-0 bg-white dark:bg-gray-800 px-3 py-1 rounded-tl-lg">
                  <p class="text-sm font-comic text-gray-600 dark:text-gray-300">{project.year}</p>
                </div>
              </div>
              <div class="p-6 flex-grow flex flex-col">
                <h2 class="text-xl font-comic font-bold mb-2 dark:text-white">{project.title}</h2>
                <p class="text-gray-600 dark:text-gray-400 font-comic mb-4 flex-grow">{project.description}</p>
                <div class="flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="bg-pink-100 dark:bg-pink-900 text-pink-800 dark:text-pink-200 text-xs px-2 py-1 rounded-full font-comic">#{tag}</span>
                  ))}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md">
        <h2 class="text-3xl font-comic font-bold mb-4 dark:text-white">Want to Collaborate? ü§ù</h2>
        <p class="text-gray-600 dark:text-gray-300 font-comic mb-6">
          I'm always looking for new project ideas and collaborations!
        </p>
        <div class="flex justify-center space-x-4 flex-wrap gap-4">
          <a href="/" class="bg-gradient-to-r from-pink-400 to-pink-600 text-white px-6 py-3 rounded-full font-comic font-bold inline-block hover:scale-105 transition-transform">
            Back to Home
          </a>
          <a href="/about" class="bg-white dark:bg-gray-700 border-2 border-pink-400 dark:border-pink-500 text-pink-600 dark:text-pink-300 px-6 py-3 rounded-full font-comic font-bold inline-block hover:scale-105 transition-transform">
            Learn About Me
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout> 
